{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb", 
    "airbnb/hooks",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // disabling this for faster development, remove before release
    "react/jsx-props-no-spreading": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-console": "off",
    "object-curly-newline": "off"
  }
}